public struct MyPair['a, 'b, T, U]:
    where:
        T: 'a
        U: 'b
        'a: 'b # 'a flows into 'b

    public first: &'a T
    public second: &'b U


public function print[T](value: T):
    pass


public function main():
    let mut outer = 32

    scope:
        let mut inner = 64

        let pair = MyPair {
            first: &outer,
            second: &inner,
        }

        outer = 32

        # since 'first' flows into 'second', this will error
        print(*pair.second)